<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4 text-warning">Login</h2>
      <form>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" placeholder="Enter your password" required>
        </div>
        <button class="btn btn-warning w-100" id="login">Login</button>
        <div class="p-2 m-2 text-center">
          Or
        </div>
        <button type="button" class="btn btn-outline-danger w-100 mb-3" id="google-login">
          <img src="https://img.icons8.com/color/16/000000/google-logo.png" alt="Google Icon" class="me-2">
          Google
        </button>
        <p class="text-center mt-3">Don't have an account? <a href="register.html" class="text-warning">Register</a></p>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/login.js"></script>